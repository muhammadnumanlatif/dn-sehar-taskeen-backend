rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // 1. PUBLIC CONTENT (Read for everyone, Write for authenticated admins)
    match /courses/{id} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    match /services/{id} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    match /sessions/{id} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    match /testimonials/{id} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    match /site_content/{id} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // 2. ADMIN METADATA (Only authenticated users can read/sync)
    match /admins/{email} {
      allow read, write: if request.auth != null;
    }
  }
}
